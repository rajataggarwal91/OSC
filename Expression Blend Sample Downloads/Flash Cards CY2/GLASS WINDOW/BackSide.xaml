<Window x:Class="GLASS_WINDOW.BackSide"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:my3D="clr-namespace:ContentControl3DLib;assembly=ContentControl3DLib"
        Title="BackSide" Height="312" Width="483">
	<Border 
    Background="AliceBlue"
    BorderBrush="Gray" 
    BorderThickness="3" 
    CornerRadius="6" 
    Width="404" Height="223"
    >
		<Grid Height="230" Width="390">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100*" />
				<ColumnDefinition Width="272*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="150" />
				<RowDefinition Height="50" />
				<RowDefinition Height="8*" />
			</Grid.RowDefinitions>
			<TextBlock x:Name="FlipText"
	   
        FontWeight="Bold"
        Foreground="Black"
        HorizontalAlignment="Center"
        VerticalAlignment="Center" Height="92" Margin="31,28,37,30" Width="322" Grid.ColumnSpan="2" />
			<Button  Command="my3D:ContentControl3D.RotateCommand"
		Content="Flip Over"   
        HorizontalAlignment="Right" 
        Margin="0,126,172,0"
        MaxHeight="25" Grid.Column="1" />
			
		</Grid>
	</Border>
</Window>
